@{
    var menus = new[] {
        new { LinkText="Discussion", ActionName="Discussion",ControllerName="Home",Roles=UserRole.Hacker.ToString() + "," + UserRole.Administrator.ToString()  },
        new { LinkText="Manage Discussions", ActionName="ManageDiscussion",ControllerName="Administration",Roles=UserRole.Administrator.ToString()  },
